{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "php artisan config:cache && php artisan route:cache && php artisan view:cache && tsc && vite build && vite build --ssr && node cache-bust.js",
        "build:ignore-types": "php artisan config:cache && php artisan route:cache && php artisan view:cache && node scripts/build-with-type-ignore.cjs && node cache-bust.js",
        "build:production": "npm run build:ignore-types",
        "build:no-cache": "php artisan config:clear && php artisan route:clear && php artisan view:clear && php artisan cache:clear && npm run build",
        "dev": "concurrently \"npm run laravel\" \"npm run vite\"",
        "dev:no-cache": "php artisan cache:clear && npm run dev",
        "vite": "vite",
        "laravel": "php artisan serve --host=localhost --port=8080",
        "lint": "eslint resources/js --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore --fix",
        "cache-bust": "node cache-bust.js"
    },
    "devDependencies": {
        "@headlessui/react": "^2.0.0",
        "@inertiajs/react": "^2.0.0",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/vite": "^4.0.0",
        "@types/node": "^20.19.0",
        "@types/react": "^18.3.23",
        "@types/react-dom": "^18.3.7",
        "@types/ziggy-js": "^1.3.3",
        "@typescript-eslint/eslint-plugin": "^7.16.0",
        "@typescript-eslint/parser": "^7.16.0",
        "@vitejs/plugin-react": "^4.2.0",
        "autoprefixer": "^10.4.12",
        "axios": "^1.8.2",
        "concurrently": "^9.0.1",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-react": "^7.34.4",
        "eslint-plugin-react-hooks": "^4.6.2",
        "laravel-vite-plugin": "^2.0.0",
        "postcss": "^8.4.31",
        "prettier": "^3.3.0",
        "prettier-plugin-organize-imports": "^4.0.0",
        "prettier-plugin-tailwindcss": "^0.6.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.2.1",
        "typescript": "^5.0.2",
        "vite": "^7.0.4"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^7.0.0",
        "@fortawesome/free-solid-svg-icons": "^7.0.0",
        "@fortawesome/react-fontawesome": "^0.2.3",
        "@react-spring/web": "^9.7.5",
        "@tsparticles/engine": "^3.9.1",
        "@tsparticles/slim": "^3.9.1",
        "framer-motion": "^12.23.12",
        "gsap": "^3.13.0",
        "react-icons": "^5.5.0",
        "react-select": "^5.10.2",
        "react-tinder-card": "^1.6.4",
        "react-tsparticles": "^2.12.2",
        "tailwind-merge": "^3.3.1",
        "tailwind-scrollbar-hide": "^4.0.0",
        "tsparticles": "^3.9.1",
        "tsparticles-slim": "^2.12.0",
        "ziggy-js": "^2.5.3"
    }
}
